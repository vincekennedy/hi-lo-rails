<%= form_with model: @course do |form| %>
  <% if course.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
        <% course.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :rating, style: "display: block" %>
    <%= form.text_field :rating %>
  </div>

  <div>
    <%= form.label :slope, style: "display: block" %>
    <%= form.number_field :slope %>
  </div>

  <div>
    <%= form.label :par, style: "display: block" %>
    <%= form.number_field :par %>
  </div>

  <h2>Holes</h2>
  <div class="holes-grid">
  <%= form.fields_for :holes do |hole_form| %>
    <% index = hole_form.index || 1 %>
    <div class="hole-entry">
      <div>
        <label>Hole: </label>
        <span class="hole-number"><%= index + 1 %></span>
        <%= hole_form.hidden_field :hole_number, value: index + 1 %>
      </div>

      <div>
        <%= hole_form.label :par %>
        <%= hole_form.number_field :hole_par, value: "4", min: "3", max: "6" %>
      </div>

      <div>
        <%= hole_form.label :handicap %>
        <%= hole_form.number_field :hole_handicap, min: "1", max: "18"%>
      </div>
    </div>
  <% end %>
</div>

  <br><br>

  <div>
    <%= form.submit %>
  </div>
  <br><br>
<% end %>
